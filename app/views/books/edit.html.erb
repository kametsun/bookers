<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:<br>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, method: :patch do |f| %>


  <dic class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </dic>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <br>

  <%= f.submit 'Update Book' %>

  <br>

  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", books_path %>

<% end %>