<!-- フラッシュメッセージ -->
<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<!-- テーブル -->
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </table>

<h2>New book</h2>
<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:<br>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<!-- フォーム -->
<div class="create_book">
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <!-- タイトル -->
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

    <!-- 感想 -->
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>

  <%= f.submit 'Create Book' %>
  <% end %>
</div>